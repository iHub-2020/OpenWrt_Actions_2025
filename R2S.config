## ==============================
## 固件目标定义 & 内核版本
## ==============================
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv8=y
CONFIG_TARGET_rockchip_armv8_DEVICE_friendlyarm_nanopi-r2s=y

## ==============================
## 镜像类型及分区设置
## ==============================
CONFIG_TARGET_ROOTFS_SQUASHFS=y                     # 启用 SquashFS 根文件系统
CONFIG_TARGET_KERNEL_PARTSIZE=128                   # 内核分区大小 (MiB)
CONFIG_TARGET_ROOTFS_PARTSIZE=1024                  # 根分区大小 (MiB)

## ==============================
## USB 支持
## ==============================
CONFIG_PACKAGE_kmod-usb-net=y                       # USB 网络驱动支持
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y             # CDC-Ether USB网卡驱动
CONFIG_PACKAGE_kmod-usb-net-cdc-ncm=y               # CDC-NCM USB网卡驱动
CONFIG_PACKAGE_kmod-usb2=y                          # USB2.0 控制器驱动
CONFIG_PACKAGE_kmod-usb3=y                          # USB3.0 控制器驱动

## ==============================
## 无线驱动（Wireless Drivers）
## ==============================
# Realtek 8821CU USB无线
CONFIG_PACKAGE_kmod-rtl8821cu=y
# Realtek 8822BU USB无线
CONFIG_PACKAGE_kmod-rtl8822bu=y
# 如无无线需求可注释以节省空间

## ==============================
## 常用 LuCI 应用/服务（Applications）
## ==============================
CONFIG_PACKAGE_luci-app-accesscontrol=y             # 上网时间控制
CONFIG_PACKAGE_luci-app-arpbind=y                   # IP/MAC 绑定
CONFIG_PACKAGE_luci-app-ddns=y                      # 动态域名服务
CONFIG_PACKAGE_luci-app-diskman=y                   # 磁盘管理
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_btrfs_progs=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_lsblk=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_mdadm=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_kmod_md_raid456=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_kmod_md_linear=y
CONFIG_PACKAGE_luci-app-dockerman=y                 # Docker 管理
CONFIG_PACKAGE_luci-app-filetransfer=y              # 文件传输
CONFIG_PACKAGE_luci-app-firewall=y                  # 防火墙配置
CONFIG_PACKAGE_luci-app-hd-idle=y                   # 硬盘休眠
CONFIG_PACKAGE_luci-app-openclash=y                 # OpenClash 科学上网
CONFIG_PACKAGE_luci-app-opkg=y                      # 软件包管理
CONFIG_PACKAGE_luci-app-passwall2=y                 # Passwall2 科学上网
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_IPv6_Nat=y
CONFIG_PACKAGE_luci-app-passwall2_Iptables_Transparent_Proxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Haproxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Hysteria=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_NaiveProxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Shadowsocks_Rust_Client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Simple_Obfs=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_SingBox=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_tuic_client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_V2ray_Plugin=y
CONFIG_PACKAGE_luci-app-poweroffdevice=y            # 一键关机
CONFIG_PACKAGE_luci-app-samba4=y                    # Samba 共享
CONFIG_PACKAGE_luci-app-syncthing=y                 # 文件同步
CONFIG_PACKAGE_luci-app-turboacc=y                  # TurboACC 流量加速
CONFIG_PACKAGE_TURBOACC_INCLUDE_FLOW_OFFLOADING=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-usb-printer=y               # USB 打印服务器
CONFIG_PACKAGE_luci-app-vlmcsd=y                    # KMS 激活
CONFIG_PACKAGE_luci-app-wol=y                       # 网络唤醒
CONFIG_PACKAGE_luci-app-zerotier=y                  # Zerotier 内网穿透

## ==============================
## 无线相关（WirelessAPD）
## ==============================
CONFIG_PACKAGE_wpad=y                               # 无线AP支持

## ==============================
## 编辑器（Editors）
## ==============================
CONFIG_PACKAGE_nano-plus=y                          # nano 轻量编辑器

## ==============================
## USB 工具（Utilities）
## ==============================
CONFIG_PACKAGE_usb-modeswitch=y                     # USB 3G/4G 切换工具
CONFIG_PACKAGE_usbids=y                             # USB 设备ID库
CONFIG_PACKAGE_usbutils=y                           # USB 工具集
