## ==============================
## 固件目标定义 & 内核版本
## ==============================
CONFIG_MODULES=y
CONFIG_HAVE_DOT_CONFIG=y
CONFIG_HOST_OS_LINUX=y
CONFIG_LINUX_6_6=y
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y

## ==============================
## 镜像类型及分区设置
## ==============================
# 支持UEFI启动
CONFIG_GRUB_EFI_IMAGES=y
# QCOW2虚拟机镜像
CONFIG_QCOW2_IMAGES=y
# VMDK虚拟机镜像
CONFIG_VMDK_IMAGES=y
# 内核分区(MiB)
CONFIG_TARGET_KERNEL_PARTSIZE=64
# 根分区(MiB)
CONFIG_TARGET_ROOTFS_PARTSIZE=1024

## ==============================
## 启动引导（Boot Loaders）
## ==============================
CONFIG_PACKAGE_grub2=y
CONFIG_PACKAGE_grub2-efi=y

## ==============================
## 存储与磁盘支持（Block Devices）
## ==============================
CONFIG_PACKAGE_kmod-nvme=y

## ==============================
## USB 支持
## ==============================
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

## ==============================
## 无线驱动（Wireless Drivers）
## ==============================
# Realtek 8821CU USB无线
CONFIG_PACKAGE_kmod-rtl8821cu=y
# Realtek 8822BU USB无线
CONFIG_PACKAGE_kmod-rtl8822bu=y
# 如无无线需求可注释以节省空间

## ==============================
## 常用 LuCI 应用/服务（Applications）
## ==============================
CONFIG_PACKAGE_luci-app-accesscontrol=y
CONFIG_PACKAGE_luci-app-arpbind=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_btrfs_progs=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_lsblk=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_mdadm=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_kmod_md_raid456=y
CONFIG_PACKAGE_luci-app-diskman_INCLUDE_kmod_md_linear=y
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_luci-app-filetransfer=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-hd-idle=y
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_luci-app-poweroffdevice=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-app-syncthing=y
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_FLOW_OFFLOADING=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-usb-printer=y
CONFIG_PACKAGE_luci-app-vlmcsd=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-zerotier=y

# ------- Passwall2 相关子选项 -------
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_IPv6_Nat=y
CONFIG_PACKAGE_luci-app-passwall2_Iptables_Transparent_Proxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Haproxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Hysteria=y
# 若空间极限可注释
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_NaiveProxy=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Shadowsocks_Libev_Client=y
# 已注释，节省空间
# CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Shadowsocks_Rust_Client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_ShadowsocksR_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_Simple_Obfs=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_SingBox=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_tuic_client=y
CONFIG_PACKAGE_luci-app-passwall2_INCLUDE_V2ray_Plugin=y

## ==============================
## 无线相关（WirelessAPD）
## ==============================
CONFIG_PACKAGE_wpad=y

## ==============================
## 编辑器（Editors）
## ==============================
CONFIG_PACKAGE_nano-plus=y

## ==============================
## USB 工具（Utilities）
## ==============================
CONFIG_PACKAGE_usb-modeswitch=y
CONFIG_PACKAGE_usbids=y
CONFIG_PACKAGE_usbutils=y
